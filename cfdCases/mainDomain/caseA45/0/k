FoamFile
{
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 2 -2 0 0 0 0];

internalField 	 uniform 1.5000;

boundaryField
{
    inlet
    {
	 type 	 atmBoundaryLayerInletK;
	 Uref 	 10.0000;
	 Zref 	 0.4572;
	 zDir 	 (0.0 0.0 1.0);
	 flowDir 	 (1.0 0.0 0.0);
	 z0 	 uniform 7.5000e-05;
	 zGround 	 uniform 0.0;
    }

    outlet
    {
	 type 	 inletOutlet;
	 inletValue 	 uniform 1.5000;
	 value 	 uniform 1.5000;
    }

    ground 
    {
	 type 	 zeroGradient;
    }
    
    top    
    {
	 type  	 symmetry;
    }

    front    
    {
	 type 	 symmetry;
    }
    
    back    
    {
	 type 	 symmetry;
    }
    
    building 
    {
	 type 	 zeroGradient;
    }
}

